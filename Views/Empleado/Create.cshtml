@model nextapp.Models.Empleado

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Empleado</title>

</head>
<body>


    <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center g-0 min-vh-100">
            <div class="col-lg-5 col-md-8 py-8 py-xl-0">

                <div class="card shadow ">

                    <div class="card-body">
                        <div class="mb-4  pb-4">

                            <div class="card shadow">
                                <h1 class="display-3 text-center">Agregar</h1>
                                <h1 class="fw-bold text-center">Empleado</h1>
                            </div>
                        </div>

                        <form class="row needs-validation" method="post" asp-action="Create" novalidate>

                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label text-label" for="fnombre">Nombre</label>
                                <input type="text" class="form-control form-control-sm" id="fnombre" asp-for="nombre" required>
                                <div class="valid-feedback">
                                    Nombre ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese nombre del empleado
                                </div>
                            </div>

                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label text-label" for="lname">Apellido</label>
                                <input type="text" id="lname" class="form-control form-control-sm" asp-for="apellido" required>

                                <div class="valid-feedback">
                                    Apellido ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese apellido del empleado
                                </div>

                            </div>

                            <div class="mb-3 form-group">
                                <label class="form-label" for="fcodigo">Codigo de empleado</label>
                                <input type="text" class="form-control form-control-sm" id="fcodigo" asp-for="codigo_empleado" maxlength="8" required
                                       placeholder="86232020">

                                <div class="valid-feedback">
                                    Codigo de empleado ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese codigo codigo de empleado
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="fcargo">Cargo</label>
                                <input type="text" class="form-control form-control-sm" id="fcargo" asp-for="cargo" required
                                       placeholder="System Analyst">

                                <div class="valid-feedback">
                                    Cargo ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese el cargo del empleado
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="fcorreo">Correo</label>
                                <input type="text" class="form-control form-control-sm" id="fcorreo" asp-for="correo"
                                       placeholder="user@dudev.com" required>

                                <div class="valid-feedback">
                                    Correo ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese el correo del empleado
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="fdepartamento">Area</label>
                                <input type="text" class="form-control form-control-sm" id="fdepartamento" asp-for="departamento" required
                                       placeholder="Infraestructura">

                                <div class="valid-feedback">
                                    Area ingresado
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese el area que pertenece el empleado
                                </div>
                            </div>


                            <div class="mb-3 col-12 col-md-4">
                                <label class="form-label">Equipo Asignado</label>
                                <select asp-for="equipo_asignado" class="selectpicker form-control form-control-sm" data-width="100%">

                                    <option value="Si">Si</option>
                                    <option value="No">No</option>

                                </select>
                            </div>

                            <div class="d-grid pb-4">
                                <button type="submit" class="btn btn-success" value="Create">Agregar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
