@model nextapp.Models.Equipo

@{

    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar Empleado</title>

</head>
<body>

    <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center g-0 min-vh-100">
            <div class="col-lg-5 col-md-8 py-8 py-xl-0">

                <div class="card shadow ">

                    <div class="card-body">
                        <div class="mb-4  pb-4">

                            <div class="card shadow">
                                <h1 class="display-3 text-center">Actualizar</h1>
                                <h1 class="fw-bold text-center">Equipo</h1>
                            </div>
                        </div>

                        <form class="row needs-validation" method="post" action="~/Equipo/Edit" novalidate>


                            <div class="mb-3">
                                <label class="form-label text-label"># de registro</label>
                                <input type="text" class="form-control form-control-sm" asp-for="id_equipos" readonly>

                            </div>

                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label text-label" for="fmarca">Marca</label>
                                <input type="text" class="form-control form-control-sm" id="fmarca" asp-for="marca" required>
                                <div class="valid-feedback">
                                    Ingresando Marca dels equipo
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese la marca del equipo
                                </div>
                            </div>

                            <div class="mb-3 col-12 col-md-6">
                                <label class="form-label text-label" for="fmodelo">Modelo</label>
                                <input type="text" id="fmodelo" class="form-control form-control-sm" asp-for="modelo" required>

                                <div class="valid-feedback">
                                    Ingresando Modelo del equipo
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese el modelo del equipo
                                </div>

                            </div>

                            <div class="mb-3 form-group">
                                <label class="form-label" for="fserie">Serie</label>
                                <input type="text" class="form-control form-control-sm" id="fserie" asp-for="serie" maxlength="8" required
                                       placeholder="86232020">

                                <div class="valid-feedback">
                                    Ingresando Serie de equipo
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese la serie del equipo
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="fcaracteristicas">Caracteristicas</label>
                                <input type="text" class="form-control form-control-sm" id="fcaracteristicas" asp-for="caracteristicas" required>

                                <div class="valid-feedback">
                                    Ingresando carateristicas del equipo
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese caracteristicas del equipo
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="fstock">Stock</label>
                                <input type="number" class="form-control form-control-sm" id="fstock" asp-for="stock" required>

                                <div class="valid-feedback">
                                    Ingresando la cantidad de equipos disponibles
                                </div>
                                <div class="invalid-feedback">
                                    Ingrese la cantidad de equipos disponibles
                                </div>
                            </div>


                            <div class="mb-3">

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Desktop" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Desktop
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Laptop" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Laptop
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Smartphone" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Smartphone
                                    </label>
                                </div>

                            </div>

                            <div class="d-grid pb-4">
                                <button type="submit" class="btn btn-success" value="Update">Actualizar Registro</button>
                            </div>


                            <div class="d-grid pb-4">
                                <a href="/Equipo/Index" class="btn btn-primary">Regresar</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/validation.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
