@model IEnumerable<nextapp.Models.Equipo>

@{
    ViewData["Title"] = "Mantenimiento de Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Equipos</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
</head>
<body>

    <div class="container-fluid">

        <div class="col-md-12 col-12 mb-5">

            <div class="card shadow">

                <div class="row">

                    <div class="col-sm-12 col-md-6">
                        <div style="display:flex;">

                            <div class="m-2">

                                <a href="~/Home/Index" class="btn btn-primary btn-sm">

                                    <img src="~/img/back.svg" width="18" />
                                    Return
                                </a>
                            </div>

                            <div class="m-2">
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    <img src="~/img/add.svg" width="20" />
                                    Add
                                </button>
                            </div>

                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                        <div class="dataTableBasic_filter">

                            <div class="m-2">
                                <input type="search" class="form-control form-control-sm" placeholder="Search" id="search">

                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="card-body pt-2">

                        <div class="table-responsive">

                            @if (Model.Count() > 0)
                            {

                                <table class=" table table-sm table-hover text-nowrap" id="table">

                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.id_equipos)
                                            </th>

                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.marca)
                                            </th>

                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.modelo)
                                            </th>

                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.serie)
                                            </th>

                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.caracteristicas)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.tipo_equipo)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.stock)
                                            </th>
                                            <th scope="col">
                                                @Html.DisplayNameFor(model => model.fecha_registro)
                                            </th>

                                            <th scope="col">
                                                Acciones
                                            </th>
                                        </tr>
                                    </thead>


                                    @foreach (var item in Model)
                                    {

                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.id_equipos)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.marca)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.modelo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.serie)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.caracteristicas)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tipo_equipo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.stock)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.fecha_registro)
                                                </td>

                                                <td>
                                                    <a href="/Equipo/Delete?id_equipos=@item.id_equipos" class="btn btn-danger btn-sm">
                                                        Delete
                                                    </a>

                                                </td>
                                                <td>
                                                    <a href="/Equipo/Edit?id_equipos=@item.id_equipos" class="btn btn-warning btn-sm">
                                                        Edit
                                                    </a>

                                                </td>
                                            </tr>

                                        </tbody>

                                    }

                                </table>

                            }
                            else
                            {
                                <div class="p-4">
                                    <div class="">
                                        <div class="row">

                                            <div class="card shadow">

                                                <p class="justify-content-center text-center text-muted p-2">
                                                    Aun no hay empleados registrados
                                                </p>

                                            </div>

                                        </div>

                                    </div>

                                </div>
                            }


                        </div>

                    </div>

                </div>

            </div>


        </div>


    </div>


    <!--Modal agregar-->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Create New</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form class="row needs-validation" asp-action="Create" asp-controller="Equipo" novalidate>

                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label text-label" for="fmarca">Marca</label>
                            <input type="text" class="form-control form-control-sm" id="fmarca" name="marca" placeholder="Asus" required>
                            <div class="valid-feedback">

                            </div>
                            <div class="invalid-feedback">
                                Ingrese la marca del equipo
                            </div>
                        </div>

                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label text-label" for="fmodelo">Modelo</label>
                            <input type="text" id="fmodelo" class="form-control form-control-sm" name="modelo" placeholder="Ultra Slim 14" required>

                            <div class="valid-feedback">

                            </div>
                            <div class="invalid-feedback">
                                Ingrese el modelo de equipo
                            </div>

                        </div>

                        <div class="mb-3 form-group">
                            <label class="form-label" for="fserie">Serie</label>
                            <input type="text" class="form-control form-control-sm" id="fserie" name="serie" maxlength="8" placeholder="AFJKLMK" required>

                            <div class="valid-feedback">

                            </div>
                            <div class="invalid-feedback">
                                Ingrese la serie del equipo
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="fcaracteristicas">Caracteristicas</label>
                            <input type="text" class="form-control form-control-sm" id="fcaracteristicas" name="caracteristicas" placeholder="11th Gen Intel(R) Core(TM) i5-1135G7 2.40GHz" required>

                            <div class="valid-feedback">

                            </div>
                            <div class="invalid-feedback">
                                Ingrese las caracteristicas del equipo
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipo de equipo</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Desktop" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Desktop
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Laptop" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Laptop
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="tipo_equipo" value="Smartphone" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Smartphone
                                </label>
                            </div>

                        </div>

                        <div class="d-grid pb-4">
                            <button type="submit" class="btn btn-success" value="Save">Agregar</button>
                        </div>

                        <div class="d-grid pb-4">
                            <button type="reset" class="btn btn-primary">Limpiar</button>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/Search.js"></script>
</body>
</html>
