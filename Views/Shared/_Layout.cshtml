@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - nextapp</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <link href="~/css/theme.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="p-2">
        <div class="container">
            <div class="row card">
                <div class="flush-nav">
                    <nav class="nav justify-content-md-center">

                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        @if (User.IsInRole("administrador"))
                        {

                            <a class="nav-link" asp-controller="Empleado" asp-action="Index">Empleado</a>
                            <a class="nav-link" asp-controller="Equipo" asp-action="Index">Equipos</a>
                            <a class="nav-link" asp-controller="Solicitud" asp-action="Index">Solicitudes</a>
                        }

                        @if (User.IsInRole("invitado"))
                        {
                            <a class="nav-link" asp-controller="Portal" asp-action="Create">Nueva Solicitud</a>

                        }

                        <a class="nav-link" asp-controller="Access" asp-action="CloseSession">Salir</a>

                    </nav>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid p-8">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <script src="~/js/validation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
